<!DOCTYPE html>
<html>
<head>
  <title>JeffIshwarHn</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/application.css">
  <link rel="stylesheet" href="/css/reveal.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/application.js"></script>
  <script src="/js/jquery.reveal.js" type="text/javascript"></script>
</head>
<body>

<nav>

  <div class="brand"><a href="/">Hacker News Wannabe!</a></div>

  <ul>
    <% if current_user %>
      <li><a href="/create_post">Create Post</a></li>
      <li><a id="profile" href="/profile">My Profile</a></li>
      <li><a id="sign-out" href="/sessions/<%= current_user.id %>">Sign Out</a></li>
    <% else %>
      <li><%= link_to "Sign In", controller: "sessions", action: "new" %></li>
      <li><%= link_to "Sign Up", controller: "users", action: "new" %></li>
    <% end %>
  </ul>

</nav>

<%= yield %>

</body>
</html>
